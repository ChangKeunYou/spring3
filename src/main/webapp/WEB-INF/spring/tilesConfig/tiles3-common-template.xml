<?xml version="1.0" encoding="UTF-8"?>

 <!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
  <!-- 
  	2013.06.11
  	비즈온 유창근
  	Tile Template 파일을 설정한 xml이다
   -->     
   
   <tiles-definitions>
   
	<definition name="baseLayout" template="/WEB-INF/jsp/tilesTemplate/baseLayout/layout.jsp">
		<put-attribute name="body" value="/WEB-INF/jsp/tilesTemplate/baseLayout/body.jsp" />
	</definition>
	
	
	<!-- index.view , login.view 같은 경우는 타일즈를 타지 않게 한다 데쉬보드성 페이지는 재처리.. -->
	
	
   	<definition name="*/*" extends="baseLayout">
   		<put-attribute name="body" value="/WEB-INF/jsp/{1}/{2}.jsp" />
   	</definition>
   	
	
	<definition name="*/*/*" extends="baseLayout">
   		<put-attribute name="body" value="/WEB-INF/jsp/{1}/{2}/{3}.jsp" />
   	</definition>
	    
	    
	    
   </tiles-definitions>